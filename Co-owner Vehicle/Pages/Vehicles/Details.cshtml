@page "{id:int?}"
@model Co_owner_Vehicle.Pages.Vehicles.DetailsModel
@{
    ViewData["Title"] = "Chi tiết xe";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Dashboard/CoOwner">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-page="/Vehicles/Index">Xe</a></li>
        <li class="breadcrumb-item active">Tesla Model 3</li>
    </ol>
</nav>

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-start mb-4">
    <div>
        <h2 class="fw-bold mb-2">Tesla Model 3</h2>
        <div class="d-flex gap-2 align-items-center">
            <span class="badge bg-success fs-6">
                <i class="bi bi-check-circle me-1"></i>Hoạt động
            </span>
            <span class="text-muted">•</span>
            <span class="text-muted">Biển số: <strong>30A-12345</strong></span>
            <span class="text-muted">•</span>
            <span class="text-muted">Sở hữu: <strong class="text-primary">40%</strong></span>
        </div>
    </div>
    <div class="btn-group">
        <button class="btn btn-primary">
            <i class="bi bi-calendar-plus me-2"></i>Đặt lịch
        </button>
        <button class="btn btn-outline-primary">
            <i class="bi bi-pencil me-2"></i>Chỉnh sửa
        </button>
        <button class="btn btn-outline-danger">
            <i class="bi bi-trash"></i>
        </button>
    </div>
</div>

<div class="row g-4">
    <!-- Left Column -->
    <div class="col-lg-8">
        <!-- Vehicle Info Card -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i>Thông tin xe
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <!-- Vehicle Image -->
                    <div class="col-md-4 text-center">
                        <div class="bg-gradient-primary p-5 rounded">
                            <i class="bi bi-car-front-fill display-1 text-white"></i>
                        </div>
                        <button class="btn btn-sm btn-outline-primary mt-3 w-100">
                            <i class="bi bi-camera me-2"></i>Thay đổi ảnh
                        </button>
                    </div>
                    
                    <!-- Vehicle Details -->
                    <div class="col-md-8">
                        <div class="row g-3">
                            <div class="col-6">
                                <label class="text-muted small">Hãng xe</label>
                                <p class="fw-semibold mb-0">Tesla</p>
                            </div>
                            <div class="col-6">
                                <label class="text-muted small">Model</label>
                                <p class="fw-semibold mb-0">Model 3</p>
                            </div>
                            <div class="col-6">
                                <label class="text-muted small">Năm sản xuất</label>
                                <p class="fw-semibold mb-0">2023</p>
                            </div>
                            <div class="col-6">
                                <label class="text-muted small">Màu sắc</label>
                                <p class="fw-semibold mb-0">Đen</p>
                            </div>
                            <div class="col-6">
                                <label class="text-muted small">Loại xe</label>
                                <p class="mb-0"><span class="badge bg-info">Xe điện</span></p>
                            </div>
                            <div class="col-6">
                                <label class="text-muted small">Số VIN</label>
                                <p class="fw-semibold mb-0">1HGBH41JXMN109186</p>
                            </div>
                            <div class="col-6">
                                <label class="text-muted small">Km hiện tại</label>
                                <p class="fw-semibold mb-0 text-primary">15,420 km</p>
                            </div>
                            <div class="col-6">
                                <label class="text-muted small">Giá mua</label>
                                <p class="fw-semibold mb-0">1,200,000,000₫</p>
                            </div>
                            <div class="col-12">
                                <label class="text-muted small">Mô tả</label>
                                <p class="mb-0">Tesla Model 3 màu đen, xe điện cao cấp với pin dung lượng lớn, hệ thống lái tự động Autopilot.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ownership Shares -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-pie-chart me-2"></i>Tỷ lệ sở hữu
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Thành viên</th>
                                <th>Email</th>
                                <th>Tỷ lệ</th>
                                <th>Số tiền đầu tư</th>
                                <th>Vai trò</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://ui-avatars.com/api/?name=Nguyen+Van+A&background=4F46E5&color=fff" 
                                             class="rounded-circle me-2" width="32" height="32">
                                        <strong>Nguyễn Văn A</strong>
                                    </div>
                                </td>
                                <td>nguyenvana@email.com</td>
                                <td><strong class="text-primary">40%</strong></td>
                                <td>480,000,000₫</td>
                                <td><span class="badge bg-warning">Admin</span></td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://ui-avatars.com/api/?name=Tran+Thi+B&background=10B981&color=fff" 
                                             class="rounded-circle me-2" width="32" height="32">
                                        <strong>Trần Thị B</strong>
                                    </div>
                                </td>
                                <td>tranthib@email.com</td>
                                <td><strong class="text-primary">35%</strong></td>
                                <td>420,000,000₫</td>
                                <td><span class="badge bg-secondary">Owner</span></td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://ui-avatars.com/api/?name=Le+Van+C&background=F59E0B&color=fff" 
                                             class="rounded-circle me-2" width="32" height="32">
                                        <strong>Lê Văn C</strong>
                                    </div>
                                </td>
                                <td>levanc@email.com</td>
                                <td><strong class="text-primary">25%</strong></td>
                                <td>300,000,000₫</td>
                                <td><span class="badge bg-secondary">Owner</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Recent Usage -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-clock-history me-2"></i>Lịch sử sử dụng gần đây</span>
                <a href="#" class="text-primary text-decoration-none fs-7">Xem tất cả</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Người dùng</th>
                                <th>Thời gian</th>
                                <th>Km bắt đầu</th>
                                <th>Km kết thúc</th>
                                <th>Quãng đường</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Nguyễn Văn A</td>
                                <td>
                                    28/10/2024<br>
                                    <small class="text-muted">08:00 - 12:30</small>
                                </td>
                                <td>15,320</td>
                                <td>15,420</td>
                                <td><strong class="text-primary">100 km</strong></td>
                            </tr>
                            <tr>
                                <td>Trần Thị B</td>
                                <td>
                                    25/10/2024<br>
                                    <small class="text-muted">14:00 - 18:00</small>
                                </td>
                                <td>15,240</td>
                                <td>15,320</td>
                                <td><strong class="text-primary">80 km</strong></td>
                            </tr>
                            <tr>
                                <td>Lê Văn C</td>
                                <td>
                                    22/10/2024<br>
                                    <small class="text-muted">09:00 - 17:00</small>
                                </td>
                                <td>15,090</td>
                                <td>15,240</td>
                                <td><strong class="text-primary">150 km</strong></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Expenses -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-receipt me-2"></i>Chi phí liên quan</span>
                <a href="#" class="text-primary text-decoration-none fs-7">Xem tất cả</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Chi phí</th>
                                <th>Ngày</th>
                                <th>Số tiền</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Phí sạc điện</td>
                                <td>25/10/2024</td>
                                <td><strong>500,000₫</strong></td>
                                <td><span class="badge bg-success">Đã duyệt</span></td>
                            </tr>
                            <tr>
                                <td>Bảo dưỡng định kỳ</td>
                                <td>18/10/2024</td>
                                <td><strong>2,000,000₫</strong></td>
                                <td><span class="badge bg-success">Đã duyệt</span></td>
                            </tr>
                            <tr>
                                <td>Rửa xe</td>
                                <td>15/10/2024</td>
                                <td><strong>300,000₫</strong></td>
                                <td><span class="badge bg-warning">Chờ duyệt</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column -->
    <div class="col-lg-4">
        <!-- Quick Stats -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-graph-up me-2"></i>Thống kê nhanh
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Tổng km đã đi</span>
                        <strong class="text-primary fs-5">15,420</strong>
                    </div>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-primary" style="width: 61.68%"></div>
                    </div>
                    <small class="text-muted">Mục tiêu: 25,000 km</small>
                </div>
                
                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Chi phí tháng này</span>
                        <strong class="text-success fs-5">800K</strong>
                    </div>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-success" style="width: 40%"></div>
                    </div>
                    <small class="text-muted">Trung bình: 2M/tháng</small>
                </div>
                
                <div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Lịch đặt tháng này</span>
                        <strong class="text-warning fs-5">12</strong>
                    </div>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-warning" style="width: 80%"></div>
                    </div>
                    <small class="text-muted">+15% so với tháng trước</small>
                </div>
            </div>
        </div>

        <!-- Upcoming Bookings -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-calendar-event me-2"></i>Lịch sắp tới
            </div>
            <div class="card-body">
                <div class="d-flex gap-3 mb-3 pb-3 border-bottom">
                    <div class="bg-primary text-white rounded text-center p-2" style="min-width: 60px;">
                        <div class="fw-bold fs-4">29</div>
                        <div class="small">Th10</div>
                    </div>
                    <div class="flex-grow-1">
                        <p class="mb-1 fw-semibold">Nguyễn Văn A</p>
                        <small class="text-muted">08:00 - 12:00</small><br>
                        <small class="text-muted">Đi công tác</small>
                    </div>
                    <span class="badge bg-success align-self-start">Đã duyệt</span>
                </div>
                
                <div class="d-flex gap-3 mb-3 pb-3 border-bottom">
                    <div class="bg-warning text-white rounded text-center p-2" style="min-width: 60px;">
                        <div class="fw-bold fs-4">31</div>
                        <div class="small">Th10</div>
                    </div>
                    <div class="flex-grow-1">
                        <p class="mb-1 fw-semibold">Trần Thị B</p>
                        <small class="text-muted">14:00 - 18:00</small><br>
                        <small class="text-muted">Đi du lịch</small>
                    </div>
                    <span class="badge bg-warning align-self-start">Chờ duyệt</span>
                </div>
                
                <div class="d-flex gap-3">
                    <div class="bg-secondary text-white rounded text-center p-2" style="min-width: 60px;">
                        <div class="fw-bold fs-4">02</div>
                        <div class="small">Th11</div>
                    </div>
                    <div class="flex-grow-1">
                        <p class="mb-1 fw-semibold">Lê Văn C</p>
                        <small class="text-muted">09:00 - 17:00</small><br>
                        <small class="text-muted">Đưa gia đình đi chơi</small>
                    </div>
                    <span class="badge bg-secondary align-self-start">Chờ duyệt</span>
                </div>
            </div>
        </div>

        <!-- Maintenance Schedule -->
        <div class="card">
            <div class="card-header">
                <i class="bi bi-tools me-2"></i>Lịch bảo trì
            </div>
            <div class="card-body">
                <div class="alert alert-warning mb-3">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Sắp đến hạn!</strong><br>
                    <small>Bảo dưỡng 20,000km - còn 4,580km</small>
                </div>
                
                <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                    <div>
                        <p class="mb-1 fw-semibold">Kiểm tra pin</p>
                        <small class="text-muted">Lần cuối: 15/09/2024</small>
                    </div>
                    <span class="badge bg-success">OK</span>
                </div>
                
                <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                    <div>
                        <p class="mb-1 fw-semibold">Thay lốp</p>
                        <small class="text-muted">Lần cuối: 10/08/2024</small>
                    </div>
                    <span class="badge bg-success">OK</span>
                </div>
                
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="mb-1 fw-semibold">Kiểm tra phanh</p>
                        <small class="text-muted">Lần cuối: 05/09/2024</small>
                    </div>
                    <span class="badge bg-success">OK</span>
                </div>
            </div>
        </div>
    </div>
</div>

