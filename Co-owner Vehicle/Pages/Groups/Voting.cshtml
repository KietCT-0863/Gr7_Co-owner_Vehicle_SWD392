@page
@model Co_owner_Vehicle.Pages.Groups.VotingModel
@{
    ViewData["Title"] = "Chi tiết voting";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a asp-page="/Groups/Index">Nhóm</a></li>
                <li class="breadcrumb-item"><a asp-page="/Groups/Details" asp-route-id="@Model.VotingSession?.CoOwnerGroupId">Chi tiết nhóm</a></li>
                <li class="breadcrumb-item active">Voting</li>
            </ol>
        </nav>
        <h2 class="fw-bold mb-1">
            <i class="bi bi-clipboard-check text-primary me-2"></i>@Model.VotingSession?.Title
        </h2>
        <p class="text-muted mb-0">@Model.VotingSession?.Description</p>
    </div>
    <div class="btn-group">
        @if (Model.VotingSession?.Status == Co_owner_Vehicle.Models.VotingStatus.Active)
        {
            <button class="btn btn-outline-primary">
                <i class="bi bi-pencil me-2"></i>Chỉnh sửa
            </button>
            <button class="btn btn-outline-danger">
                <i class="bi bi-x-circle me-2"></i>Hủy voting
            </button>
        }
        else
        {
            <button class="btn btn-outline-secondary" disabled>
                <i class="bi bi-lock me-2"></i>Voting đã kết thúc
            </button>
        }
    </div>
</div>

<!-- Voting Header Card -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row g-4">
            <div class="col-md-8">
                <div class="d-flex align-items-start gap-3 mb-3">
                    <div class="bg-primary bg-opacity-10 p-3 rounded">
                        <i class="bi bi-clipboard-check fs-1 text-primary"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h4 class="fw-bold mb-2">@Model.VotingSession?.Title</h4>
                        <div class="d-flex gap-2 flex-wrap mb-2">
                            <span class="badge @(Model.VotingSession?.Status == Co_owner_Vehicle.Models.VotingStatus.Active ? "bg-warning" : "bg-secondary") fs-6">
                                @(Model.VotingSession?.Status == Co_owner_Vehicle.Models.VotingStatus.Active ? "Đang bỏ phiếu" : "Đã kết thúc")
                            </span>
                            <span class="badge bg-info">@Model.VotingSession?.DecisionType</span>
                        </div>
                        <p class="text-muted mb-0">
                            @Model.VotingSession?.Description
                        </p>
                    </div>
                </div>

                <div class="row g-3 mt-3">
                    <div class="col-md-6">
                        <label class="form-label small text-muted">Nhóm</label>
                        <p class="mb-0">
                            <i class="bi bi-people me-1"></i>@Model.VotingSession?.CoOwnerGroup?.GroupName
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label small text-muted">Xe</label>
                        <p class="mb-0">
                            <i class="bi bi-car-front me-1"></i>@Model.VotingSession?.CoOwnerGroup?.Vehicle?.Brand @Model.VotingSession?.CoOwnerGroup?.Vehicle?.Model - @Model.VotingSession?.CoOwnerGroup?.Vehicle?.LicensePlate
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label small text-muted">Người tạo</label>
                        <div class="d-flex align-items-center">
                            <div class="avatar-xs bg-primary text-white me-2">@GetInitials(Model.VotingSession?.CreatedByUser?.FullName ?? "U")</div>
                            <span>@Model.VotingSession?.CreatedByUser?.FullName</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label small text-muted">Ngày tạo</label>
                        <p class="mb-0">@Model.VotingSession?.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label small text-muted">Hạn bỏ phiếu</label>
                        <p class="mb-0">
                            <i class="bi bi-calendar3 me-1"></i>@Model.VotingSession?.EndDate?.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label small text-muted">Thời gian còn lại</label>
                        <p class="mb-0">
                            @if (Model.VotingSession?.EndDate != null)
                            {
                                var timeLeft = Model.VotingSession.EndDate.Value - DateTime.UtcNow;
                                if (timeLeft.TotalDays > 0)
                                {
                                    <span class="badge bg-warning">@((int)timeLeft.TotalDays) ngày</span>
                                }
                                else if (timeLeft.TotalHours > 0)
                                {
                                    <span class="badge bg-danger">@((int)timeLeft.TotalHours) giờ</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Đã hết hạn</span>
                                }
                            }
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="mb-3">Tiến độ bỏ phiếu</h6>
                        <div class="mb-3 pb-3 border-bottom">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Đã bỏ phiếu</span>
                                <strong>@Model.VotingSession?.Votes?.Count/@Model.VotingSession?.TotalMembers</strong>
                            </div>
                            <div class="progress" style="height: 25px;">
                                @{
                                    var votedCount = Model.VotingSession?.Votes?.Count ?? 0;
                                    var totalMembers = Model.VotingSession?.TotalMembers ?? 1;
                                    var progressPercentage = totalMembers > 0 ? (int)Math.Round((double)votedCount * 100 / totalMembers) : 0;
                                }
                                <div class="progress-bar bg-warning" style="width: @progressPercentage%">@progressPercentage%</div>
                            </div>
                        </div>
                        <div class="mb-3 pb-3 border-bottom">
                            <small class="text-muted">Đồng ý</small>
                            <h5 class="fw-bold mb-0">@(Model.VotingSession?.Votes?.Count(v => v.Choice == Co_owner_Vehicle.Models.VoteChoice.Yes) ?? 0) phiếu</h5>
                        </div>
                        <div class="mb-3 pb-3 border-bottom">
                            <small class="text-muted">Không đồng ý</small>
                            <h5 class="fw-bold mb-0">@(Model.VotingSession?.Votes?.Count(v => v.Choice == Co_owner_Vehicle.Models.VoteChoice.No) ?? 0) phiếu</h5>
                        </div>
                        <div>
                            <small class="text-muted">Chưa bỏ phiếu</small>
                            <h5 class="fw-bold mb-0 text-warning">@((Model.VotingSession?.TotalMembers ?? 0) - (Model.VotingSession?.Votes?.Count ?? 0)) người</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Left Column -->
    <div class="col-lg-8">
        <!-- Proposal Details -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-file-text me-2"></i>Chi tiết đề xuất
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label small text-muted">Mô tả</label>
                    <p>@Model.VotingSession?.Description</p>
                </div>
                <div class="mb-3">
                    <label class="form-label small text-muted">Loại quyết định</label>
                    <p><span class="badge bg-info">@Model.VotingSession?.DecisionType</span></p>
                </div>
            </div>
        </div>

        <!-- Voting Form -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-check-circle me-2"></i>Bỏ phiếu của bạn
                </h6>
            </div>
            <div class="card-body">
                @if (Model.HasVoted)
                {
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle me-2"></i>
                        Bạn đã bỏ phiếu: <strong>@(Model.UserVote == Co_owner_Vehicle.Models.VoteChoice.Yes ? "Đồng ý" : Model.UserVote == Co_owner_Vehicle.Models.VoteChoice.No ? "Không đồng ý" : "Trung lập")</strong>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        Bạn chưa bỏ phiếu cho voting này. Vui lòng chọn phương án và nhấn "Gửi phiếu".
                    </div>
                }
                
                @if (Model.VotingSession?.Status == Co_owner_Vehicle.Models.VotingStatus.Active)
                {
                    <form method="post">
                        <div class="mb-4">
                            <label class="form-label fw-bold">Bạn có đồng ý với đề xuất này không?</label>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" name="choice" id="voteYes" value="Yes" @(Model.UserVote == Co_owner_Vehicle.Models.VoteChoice.Yes ? "checked" : "")>
                                <label class="form-check-label" for="voteYes">
                                    <i class="bi bi-check-circle text-success me-1"></i>
                                    <strong>Đồng ý</strong>
                                    <small class="text-muted d-block ms-4">Tôi đồng ý với đề xuất này</small>
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" name="choice" id="voteNo" value="No" @(Model.UserVote == Co_owner_Vehicle.Models.VoteChoice.No ? "checked" : "")>
                                <label class="form-check-label" for="voteNo">
                                    <i class="bi bi-x-circle text-danger me-1"></i>
                                    <strong>Không đồng ý</strong>
                                    <small class="text-muted d-block ms-4">Tôi không đồng ý với đề xuất này</small>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="choice" id="voteAbstain" value="Abstain" @(Model.UserVote == Co_owner_Vehicle.Models.VoteChoice.Abstain ? "checked" : "")>
                                <label class="form-check-label" for="voteAbstain">
                                    <i class="bi bi-dash-circle text-secondary me-1"></i>
                                    <strong>Trung lập</strong>
                                    <small class="text-muted d-block ms-4">Tôi không có ý kiến</small>
                                </label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ghi chú (tùy chọn)</label>
                            <textarea name="comments" class="form-control" rows="3" placeholder="Bạn có thể để lại ghi chú về quyết định của mình..."></textarea>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send me-2"></i>@(Model.HasVoted ? "Cập nhật phiếu" : "Gửi phiếu")
                            </button>
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-secondary">
                        <i class="bi bi-info-circle me-2"></i>
                        Voting này đã kết thúc.
                    </div>
                }
            </div>
        </div>

        <!-- Votes List -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-people me-2"></i>Kết quả bỏ phiếu
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Thành viên</th>
                                <th>Phiếu bầu</th>
                                <th>Ghi chú</th>
                                <th>Thời gian</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.VotingSession?.Votes?.Any() == true)
                            {
                                @foreach (var vote in Model.VotingSession.Votes.OrderBy(v => v.VotedAt))
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-xs bg-primary text-white me-2">@GetInitials(vote.User?.FullName ?? "U")</div>
                                                @vote.User?.FullName
                                            </div>
                                        </td>
                                        <td>
                                            @{
                                                var badgeClass = vote.Choice switch
                                                {
                                                    Co_owner_Vehicle.Models.VoteChoice.Yes => "bg-success",
                                                    Co_owner_Vehicle.Models.VoteChoice.No => "bg-danger",
                                                    Co_owner_Vehicle.Models.VoteChoice.Abstain => "bg-secondary",
                                                    _ => "bg-secondary"
                                                };
                                                var choiceText = vote.Choice switch
                                                {
                                                    Co_owner_Vehicle.Models.VoteChoice.Yes => "Đồng ý",
                                                    Co_owner_Vehicle.Models.VoteChoice.No => "Không đồng ý",
                                                    Co_owner_Vehicle.Models.VoteChoice.Abstain => "Trung lập",
                                                    _ => "Chưa bỏ phiếu"
                                                };
                                            }
                                            <span class="badge @badgeClass">@choiceText</span>
                                        </td>
                                        <td>@(vote.Comments ?? "-")</td>
                                        <td>@vote.VotedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Chưa có phiếu bầu nào</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column -->
    <div class="col-lg-4">
        <!-- Voting Rules -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>Quy tắc voting
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Mỗi thành viên có 1 phiếu
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Cần đa số (>50%) để thông qua
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Hạn bỏ phiếu: @Model.VotingSession?.EndDate?.ToLocalTime().ToString("dd/MM/yyyy")
                    </li>
                    <li>
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Có thể thay đổi phiếu trước hạn
                    </li>
                </ul>
            </div>
        </div>

        <!-- Voting Result Chart -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-pie-chart me-2"></i>Kết quả
                </h6>
            </div>
            <div class="card-body">
                <canvas id="voteChart" height="200"></canvas>
                <div class="mt-3 text-center">
                    <p class="mb-1"><strong>Kết quả hiện tại:</strong></p>
                    <span class="badge bg-success fs-6">Đồng ý: @(Model.VotingSession?.Votes?.Count(v => v.Choice == Co_owner_Vehicle.Models.VoteChoice.Yes) ?? 0)</span>
                    <span class="badge bg-danger fs-6 ms-2">Không: @(Model.VotingSession?.Votes?.Count(v => v.Choice == Co_owner_Vehicle.Models.VoteChoice.No) ?? 0)</span>
                    <span class="badge bg-warning fs-6 ms-2">Trung lập: @(Model.VotingSession?.Votes?.Count(v => v.Choice == Co_owner_Vehicle.Models.VoteChoice.Abstain) ?? 0)</span>
                    <span class="badge bg-secondary fs-6 ms-2">Chưa: @((Model.VotingSession?.TotalMembers ?? 0) - (Model.VotingSession?.Votes?.Count ?? 0))</span>
                </div>
            </div>
        </div>

        <!-- Related Votes -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-link-45deg me-2"></i>Voting liên quan
                </h6>
            </div>
            <div class="card-body">
                <div class="text-muted text-center">
                    <i class="bi bi-info-circle me-2"></i>
                    Chưa có voting liên quan
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name))
            return "U";
        
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[^1][0]}".ToUpper();
        
        return parts[0].Substring(0, Math.Min(2, parts[0].Length)).ToUpper();
    }
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Vote Chart
        const voteCtx = document.getElementById('voteChart').getContext('2d');
        const yesCount = @(Model.VotingSession?.Votes?.Count(v => v.Choice == Co_owner_Vehicle.Models.VoteChoice.Yes) ?? 0);
        const noCount = @(Model.VotingSession?.Votes?.Count(v => v.Choice == Co_owner_Vehicle.Models.VoteChoice.No) ?? 0);
        const abstainCount = @(Model.VotingSession?.Votes?.Count(v => v.Choice == Co_owner_Vehicle.Models.VoteChoice.Abstain) ?? 0);
        const totalMembers = @(Model.VotingSession?.TotalMembers ?? 0);
        const notVotedCount = totalMembers - (yesCount + noCount + abstainCount);
        
        new Chart(voteCtx, {
            type: 'pie',
            data: {
                labels: ['Đồng ý', 'Không đồng ý', 'Trung lập', 'Chưa bỏ phiếu'],
                datasets: [{
                    data: [yesCount, noCount, abstainCount, notVotedCount],
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.8)',
                        'rgba(255, 99, 132, 0.8)',
                        'rgba(255, 206, 86, 0.8)',
                        'rgba(153, 153, 153, 0.8)'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                    }
                }
            }
        });
    </script>
}

