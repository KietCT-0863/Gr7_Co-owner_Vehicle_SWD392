@page
@model Co_owner_Vehicle.Pages.Bookings.MyBookingsModel
@{
    ViewData["Title"] = "Lịch của tôi";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">
            <i class="bi bi-calendar-heart text-primary me-2"></i>Lịch của tôi
        </h2>
        <p class="text-muted mb-0">Quản lý các lịch đặt xe của bạn</p>
    </div>
    <div>
        <a asp-page="/Bookings/Calendar" class="btn btn-outline-secondary me-2">
            <i class="bi bi-calendar-week me-2"></i>Xem lịch
        </a>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createBookingModal">
            <i class="bi bi-plus-lg me-2"></i>Đặt lịch mới
        </button>
    </div>
</div>

<!-- Stats Summary -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="stat-card">
            <div class="stat-card-icon primary">
                <i class="bi bi-calendar-check"></i>
            </div>
            <div class="stat-card-value" data-value="12">0</div>
            <div class="stat-card-label">Lịch tháng này</div>
            <div class="stat-card-change positive">
                <i class="bi bi-arrow-up"></i> +3 so tháng trước
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="stat-card">
            <div class="stat-card-icon warning">
                <i class="bi bi-clock-history"></i>
            </div>
            <div class="stat-card-value" data-value="3">0</div>
            <div class="stat-card-label">Chờ duyệt</div>
            <div class="stat-card-change">
                Cần chờ xác nhận
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="stat-card">
            <div class="stat-card-icon success">
                <i class="bi bi-check-circle"></i>
            </div>
            <div class="stat-card-value" data-value="45">0</div>
            <div class="stat-card-label">Đã hoàn thành</div>
            <div class="stat-card-change positive">
                <i class="bi bi-graph-up"></i> Tất cả thời gian
            </div>
        </div>
    </div>
</div>

<!-- Tabs Navigation -->
<ul class="nav nav-tabs mb-4" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#upcoming">
            <i class="bi bi-calendar-event me-1"></i>Sắp tới
            <span class="badge bg-primary ms-2">3</span>
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#pending">
            <i class="bi bi-clock-history me-1"></i>Chờ duyệt
            <span class="badge bg-warning ms-2">3</span>
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#history">
            <i class="bi bi-clock-history me-1"></i>Lịch sử
        </button>
    </li>
</ul>

