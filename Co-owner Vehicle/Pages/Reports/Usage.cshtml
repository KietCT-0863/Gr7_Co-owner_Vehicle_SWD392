                            </tr>
                            <tr>
                                <td>Lê Thị B</td>
                                <td>30%</td>
                                <td>30.6%</td>
                                <td class="text-success">+0.6%</td>
                                <td><span class="badge bg-success">Cân bằng</span></td>
                            </tr>
                            <tr>
                                <td>Trần Văn C</td>
                                <td>25%</td>
                                <td>22.4%</td>
