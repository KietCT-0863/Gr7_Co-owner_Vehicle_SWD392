<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Co-owner Vehicle</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <a asp-page="/Index" class="text-decoration-none text-white sidebar-header-link">
            <div class="sidebar-header">
                <i class="bi bi-car-front-fill text-primary fs-3"></i>
                <span class="sidebar-brand">Co-owner Vehicle</span>
            </div>
        </a>
        
        <nav class="sidebar-nav">
            @if (User.Identity?.IsAuthenticated == true)
            {
                if (User.IsInRole("Admin"))
                {
                    <a asp-page="/Dashboard/Admin" class="sidebar-link active">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                }
                else if (User.IsInRole("Staff"))
                {
                    <a asp-page="/Dashboard/Staff" class="sidebar-link active">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                }
                else
                {
                    <a asp-page="/Dashboard/CoOwner" class="sidebar-link active">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                }
            }
            else
            {
                <a asp-page="/Dashboard/CoOwner" class="sidebar-link active">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>
            }
            
            <a asp-page="/Vehicles/Index" class="sidebar-link">
                <i class="bi bi-car-front"></i>
                <span>Xe của tôi</span>
            </a>
            
            <a asp-page="/Bookings/Calendar" class="sidebar-link">
                <i class="bi bi-calendar-check"></i>
                <span>Đặt lịch</span>
            </a>
            
            <a asp-page="/Expenses/Index" class="sidebar-link">
                <i class="bi bi-receipt"></i>
                <span>Chi phí</span>
            </a>
            
            <a asp-page="/Payments/Index" class="sidebar-link">
                <i class="bi bi-credit-card"></i>
                <span>Thanh toán</span>
            </a>
            
            <a asp-page="/Groups/Index" class="sidebar-link">
                <i class="bi bi-people"></i>
                <span>Nhóm</span>
            </a>
            
            <a asp-page="/Reports/Financial" class="sidebar-link">
                <i class="bi bi-graph-up"></i>
                <span>Báo cáo</span>
            </a>
            
            <div class="sidebar-divider"></div>
            
            <a asp-page="/Account/Profile" class="sidebar-link">
                <i class="bi bi-person-circle"></i>
                <span>Hồ sơ</span>
            </a>
            
            <a asp-page="/Settings/Index" class="sidebar-link">
                <i class="bi bi-gear"></i>
                <span>Cài đặt</span>
            </a>
        </nav>
    </aside>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <!-- Top Header -->
        <header class="top-header">
            <button class="btn btn-link sidebar-toggle" id="sidebarToggle">
                <i class="bi bi-list fs-4"></i>
            </button>
            
            <div class="header-search">
                <i class="bi bi-search"></i>
                <input type="text" class="form-control" placeholder="Tìm kiếm xe, lịch, chi phí...">
            </div>
            
            <div class="header-actions">
                <!-- Notifications -->
                <div class="dropdown">
                    <button class="btn btn-link position-relative" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-bell fs-5"></i>
                        @{ var notifs = ViewData["Notifications"] as System.Collections.IEnumerable; var notifCount = 0; if (notifs != null) { foreach (var _ in notifs) { notifCount++; } } }
                        @if (notifCount > 0)
                        {
                            <span class="badge bg-danger position-absolute top-0 start-100 translate-middle rounded-pill">@notifCount</span>
                        }
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end notification-dropdown">
                        <li class="dropdown-header">
                            <strong>Thông báo</strong>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        @if (notifCount == 0)
                        {
                            <li class="px-3 text-muted">Không có thông báo</li>
                        }
                        else
                        {
                            foreach (dynamic n in notifs)
                            {
                                <li>
                                    <a class="dropdown-item notification-item" href="#">
                                        <div class="notification-icon @n.Color">
                                            <i class="bi @n.Icon"></i>
                                        </div>
                                        <div class="notification-content">
                                            <strong>@n.Title</strong>
                                            <small>@n.Sub</small>
                                        </div>
                                    </a>
                                </li>
                            }
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-center text-primary" href="#">
                                Xem tất cả thông báo
                            </a>
                        </li>
                    </ul>
                </div>
                
                <!-- User Menu -->
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="dropdown">
                        <button class="btn btn-link d-flex align-items-center" type="button" data-bs-toggle="dropdown">
                            @{
                                var userName = User.FindFirst("FullName")?.Value ?? User.FindFirst(ClaimTypes.Name)?.Value ?? "User";
                                var userInitials = string.Join("", userName.Split(' ').Select(n => n[0]).Take(2));
                            }
                            <img src="https://ui-avatars.com/api/?name=@userInitials&background=4F46E5&color=fff" 
                                 alt="User" class="user-avatar">
                            <span class="ms-2 d-none d-md-inline">@userName</span>
                            <i class="bi bi-chevron-down ms-2"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" asp-page="/Account/Profile">
                                    <i class="bi bi-person me-2"></i>Hồ sơ cá nhân
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-page="/Settings/Index">
                                    <i class="bi bi-gear me-2"></i>Cài đặt
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="post" asp-page="/Account/Logout" class="d-inline">
                                    <button type="submit" class="dropdown-item text-danger w-100 text-start border-0 bg-transparent">
                                        <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a asp-page="/Account/Login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
                    </a>
                }
            </div>
        </header>

        <!-- Page Content -->
        <main class="page-content">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="page-footer">
            <div class="d-flex justify-content-between align-items-center">
                <span>&copy; 2024 Co-owner Vehicle. All rights reserved.</span>
                <span>
                    <a href="#" class="text-muted me-3">Trợ giúp</a>
                    <a href="#" class="text-muted">Liên hệ</a>
                </span>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
