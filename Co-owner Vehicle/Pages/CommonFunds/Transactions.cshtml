@page
@model Co_owner_Vehicle.Pages.CommonFunds.TransactionsModel
@{
    ViewData["Title"] = "Lịch sử giao dịch quỹ";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a asp-page="/CommonFunds/Index">Quỹ chung</a></li>
                <li class="breadcrumb-item"><a asp-page="/CommonFunds/Details">Chi tiết</a></li>
                <li class="breadcrumb-item active">Lịch sử</li>
            </ol>
        </nav>
        <h2 class="fw-bold mb-1">
            <i class="bi bi-clock-history text-primary me-2"></i>Lịch sử giao dịch quỹ
        </h2>
        <p class="text-muted mb-0">Xem tất cả giao dịch của quỹ</p>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label small">Loại giao dịch</label>
                <select class="form-select">
                    <option value="">Tất cả</option>
                    <option>Nạp tiền</option>
                    <option>Rút tiền</option>
                    <option>Chi phí</option>
                    <option>Hoàn tiền</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label small">Từ ngày</label>
                <input type="date" class="form-control">
            </div>
            <div class="col-md-2">
                <label class="form-label small">Đến ngày</label>
                <input type="date" class="form-control">
            </div>
            <div class="col-md-3">
                <label class="form-label small">Thành viên</label>
                <select class="form-select">
                    <option value="">Tất cả</option>
                    <option>Nguyễn Văn A</option>
                    <option>Lê Thị B</option>
                    <option>Trần Văn C</option>
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i>Lọc
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Summary -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <small class="text-muted">Tổng nạp</small>
                <h4 class="fw-bold text-success mb-0">8,000,000 đ</h4>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <small class="text-muted">Tổng chi</small>
                <h4 class="fw-bold text-danger mb-0">2,500,000 đ</h4>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <small class="text-muted">Số giao dịch</small>
                <h4 class="fw-bold mb-0">15</h4>
            </div>
        </div>
    </div>
</div>

