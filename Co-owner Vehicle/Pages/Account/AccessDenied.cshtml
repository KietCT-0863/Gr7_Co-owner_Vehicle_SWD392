@page
@model Co_owner_Vehicle.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Truy cập bị từ chối";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <div class="access-denied-icon mx-auto mb-3">
                            <i class="bi bi-shield-x"></i>
                        </div>
                        <h1 class="display-1 fw-bold text-danger">403</h1>
                        <h3 class="fw-bold mb-3">Truy cập bị từ chối</h3>
                        <p class="text-muted mb-4">
                            Xin lỗi, bạn không có quyền truy cập vào trang này hoặc thực hiện hành động này.
                        </p>
                    </div>

                    <div class="alert alert-warning mb-4">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Bạn cần quyền phù hợp để:</strong>
                        <ul class="text-start mt-2 mb-0">
                            <li>Truy cập trang này</li>
                            <li>Thực hiện hành động này</li>
                            <li>Xem thông tin này</li>
                        </ul>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-page="/Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-house me-2"></i>Về trang chủ
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Quay lại trang trước
                        </button>
                    </div>

                    <hr class="my-4">

                    <div class="text-muted small">
                        <p class="mb-2">
                            <i class="bi bi-info-circle me-2"></i>
                            Nếu bạn tin rằng đây là lỗi, vui lòng liên hệ quản trị viên.
                        </p>
                        <p class="mb-0">
                            <a href="#" class="text-decoration-none">
                                <i class="bi bi-headset me-1"></i>Liên hệ hỗ trợ
                            </a>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Helpful Links -->
            <div class="mt-4 text-center">
                <h6 class="text-muted mb-3">Bạn có thể quan tâm:</h6>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a asp-page="/Dashboard/CoOwner" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-speedometer2 me-1"></i>Dashboard
                    </a>
                    <a asp-page="/Account/Profile" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-person me-1"></i>Hồ sơ
                    </a>
                    <a asp-page="/Vehicles/Index" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-car-front me-1"></i>Xe của tôi
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .access-denied-icon {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
        color: white;
        box-shadow: 0 10px 30px rgba(255, 107, 107, 0.3);
        animation: pulse 2s ease-in-out infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            box-shadow: 0 10px 30px rgba(255, 107, 107, 0.3);
        }
        50% {
            transform: scale(1.05);
            box-shadow: 0 15px 40px rgba(255, 107, 107, 0.4);
        }
    }
</style>

