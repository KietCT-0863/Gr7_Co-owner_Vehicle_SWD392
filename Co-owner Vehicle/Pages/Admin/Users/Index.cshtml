@page
@model Co_owner_Vehicle.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "Duyệt người dùng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">
            <i class="bi bi-people-check text-primary me-2"></i>Duyệt người dùng mới
        </h2>
        <p class="text-muted mb-0">Danh sách người dùng chưa xác thực</p>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.UnverifiedUsers.Any())
        {
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Ngày đăng ký</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.UnverifiedUsers)
                        {
                            <tr>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>@user.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-end">
                                    <form method="post" asp-page-handler="Verify" class="d-inline">
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="bi bi-check2-circle me-1"></i>Duyệt
                                        </button>
                                    </form>
                                    <form method="post" asp-page-handler="Deactivate" class="d-inline ms-2">
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-person-x me-1"></i>Vô hiệu hóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4 text-muted">
                <i class="bi bi-check2-square fs-1 d-block mb-2"></i>
                <p>Không có người dùng nào cần duyệt</p>
            </div>
        }
    </div>
    <div class="card-footer bg-transparent d-flex justify-content-between">
        <a asp-page="/Dashboard/Admin" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i>Quay lại Dashboard
        </a>
    </div>
</div>


