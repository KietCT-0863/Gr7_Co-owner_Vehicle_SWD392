@page
@model Co_owner_Vehicle.Pages.Services.IndexModel
@{
    ViewData["Title"] = "Dịch vụ xe";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">
            <i class="bi bi-tools text-primary me-2"></i>Dịch vụ xe
        </h2>
        <p class="text-muted mb-0">Quản lý dịch vụ và bảo dưỡng xe</p>
    </div>
    <button class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>Thêm dịch vụ
    </button>
</div>

<!-- Summary Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="text-muted mb-2">Tổng dịch vụ</h6>
                        <h3 class="fw-bold mb-0">24</h3>
                    </div>
                    <div class="stat-icon bg-primary">
                        <i class="bi bi-tools"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="text-muted mb-2">Sắp đến hạn</h6>
                        <h3 class="fw-bold mb-0">3</h3>
                    </div>
                    <div class="stat-icon bg-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="text-muted mb-2">Đã hoàn thành</h6>
                        <h3 class="fw-bold mb-0">18</h3>
                    </div>
                    <div class="stat-icon bg-success">
                        <i class="bi bi-check-circle"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="text-muted mb-2">Tổng chi phí</h6>
                        <h3 class="fw-bold mb-0">15.5M</h3>
                    </div>
                    <div class="stat-icon bg-info">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label small">Chọn xe</label>
                <select class="form-select">
                    <option value="">Tất cả xe</option>
                    <option selected>Tesla Model 3 - 30A-12345</option>
                    <option>Toyota Prius - 30B-67890</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label small">Loại dịch vụ</label>
                <select class="form-select">
                    <option value="">Tất cả</option>
                    <option>Bảo dưỡng định kỳ</option>
                    <option>Sửa chữa</option>
                    <option>Thay thế</option>
                    <option>Kiểm tra</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label small">Trạng thái</label>
                <select class="form-select">
                    <option value="">Tất cả</option>
                    <option>Đã hoàn thành</option>
                    <option>Sắp đến hạn</option>
                    <option>Quá hạn</option>
                    <option>Đã lên lịch</option>
                </select>
            </div>
            <div class="col-md-3">
                <button class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i>Lọc
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Services List -->
<div class="card">
    <div class="card-header">
        <h6 class="mb-0">
            <i class="bi bi-list-ul me-2"></i>Danh sách dịch vụ
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Dịch vụ</th>
                        <th>Xe</th>
                        <th>Loại</th>
                        <th>Ngày thực hiện</th>
                        <th>Số km</th>
                        <th>Chi phí</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <strong>Bảo dưỡng định kỳ 15,000km</strong><br>
                            <small class="text-muted">Thay dầu, lọc gió, kiểm tra tổng thể</small>
                        </td>
                        <td>Tesla Model 3</td>
                        <td><span class="badge bg-primary">Bảo dưỡng</span></td>
                        <td>20/10/2024</td>
                        <td>15,000 km</td>
                        <td class="fw-bold">2,000,000 đ</td>
                        <td><span class="badge bg-success">Hoàn thành</span></td>
                        <td>
                            <a href="#" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Sửa chữa phanh</strong><br>
                            <small class="text-muted">Thay má phanh và đĩa phanh trước</small>
                        </td>
                        <td>Tesla Model 3</td>
                        <td><span class="badge bg-danger">Sửa chữa</span></td>
                        <td>05/10/2024</td>
                        <td>14,500 km</td>
                        <td class="fw-bold">5,000,000 đ</td>
                        <td><span class="badge bg-success">Hoàn thành</span></td>
                        <td>
                            <a href="#" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Bảo dưỡng định kỳ 18,000km</strong><br>
                            <small class="text-muted">Thay dầu, lọc gió, kiểm tra tổng thể</small>
                        </td>
                        <td>Tesla Model 3</td>
                        <td><span class="badge bg-primary">Bảo dưỡng</span></td>
                        <td>15/11/2024</td>
                        <td>18,000 km</td>
                        <td class="fw-bold">2,000,000 đ</td>
                        <td><span class="badge bg-warning">Sắp đến hạn</span></td>
                        <td>
                            <a href="#" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Kiểm tra lốp</strong><br>
                            <small class="text-muted">Kiểm tra độ mòn và áp suất lốp</small>
                        </td>
                        <td>Tesla Model 3</td>
                        <td><span class="badge bg-info">Kiểm tra</span></td>
                        <td>01/11/2024</td>
                        <td>16,500 km</td>
                        <td class="fw-bold">500,000 đ</td>
                        <td><span class="badge bg-info">Đã lên lịch</span></td>
                        <td>
                            <a href="#" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-3">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Trước</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Sau</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

